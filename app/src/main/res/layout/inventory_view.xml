<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/inventory_owner_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/show_owner_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XYZ"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/show_owner_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XYZ"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/show_owner_capacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XYZ"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/show_owner_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XYZ"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/show_owner_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XYZ"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/show_owner_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XYZ"
                android:textSize="15sp" />


        </LinearLayout>

    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BOOK"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/book_inventory"/>



</LinearLayout>

